<UserControl x:Class="CodeMosaic.Settings"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 mc:Ignorable="d" 
			 d:DesignHeight="300" d:DesignWidth="400"
			 Background="White">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Text="Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

		<StackPanel Grid.Row="1">
			<TextBlock Text="Theme:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
			<RadioButton Content="Light" IsChecked="{Binding IsLightTheme, Mode=TwoWay}" Margin="0,0,0,5"/>
			<RadioButton Content="Dark" IsChecked="{Binding IsDarkTheme, Mode=TwoWay}" Margin="0,0,0,10"/>
		</StackPanel>
	</Grid>
</UserControl>