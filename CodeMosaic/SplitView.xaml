<UserControl x:Class="CodeMosaic.SplitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CodeMosaic"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.DataContext>
		<local:SplitViewModel />
	</UserControl.DataContext>
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!-- Input File Path Selection -->
		<StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
			<TextBlock Text="Input File:" Width="100" VerticalAlignment="Center" />
			<TextBox Name="InputFileTextBox" Text="{Binding InputFilePath}" Width="400" Margin="5,0" IsReadOnly="True" />
			<Button Content="Browse" Width="80" Command="{Binding BrowseInputFileCommand}" />
		</StackPanel>

		<!-- Output Folder and Base Name -->
		<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
			<TextBlock Text="Output Folder:" Width="100" VerticalAlignment="Center" />
			<TextBox Name="OutputFolderTextBox" Text="{Binding OutputFolder}" Width="250" Margin="5,0" />
			<Button Content="Browse" Width="80" Command="{Binding BrowseOutputFolderCommand}" />
			<TextBox Name="BaseOutputNameTextBox" Text="{Binding BaseOutputName}" Width="150" Margin="5,0" ToolTip="Base name for parts (e.g., Input_part1.cs)" />
		</StackPanel>

		<!-- Split Mode Selection with CheckBoxes -->
		<StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,10">
			<TextBlock Text="Split Mode:" FontWeight="Bold" Margin="0,0,0,5" />
			<CheckBox IsChecked="{Binding IsBySize}" Content="By Max Size (MB)" Margin="0,0,0,5" />
			<CheckBox IsChecked="{Binding IsByChars}" Content="By Max Characters" Margin="0,0,0,5" />
			<CheckBox IsChecked="{Binding IsByParts}" Content="By Number of Parts" Margin="0,0,0,5" />
			<CheckBox IsChecked="{Binding CombineModes}" Content="Combine Size &amp; Characters" IsEnabled="{Binding IsBySizeAndCharsEnabled}" Margin="0,0,0,10" />
		</StackPanel>

		<!-- Options for Modes -->
		<StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
			<StackPanel Orientation="Vertical" Margin="5">
				<TextBlock Text="Max Size (MB):" />
				<Slider Name="MaxSizeSlider" Value="{Binding MaxSize}" Minimum="1" Maximum="100" Width="100" IsEnabled="{Binding IsBySize}" />
				<TextBlock Text="{Binding MaxSize, StringFormat={}{0:F0} MB}" />
			</StackPanel>
			<StackPanel Orientation="Vertical" Margin="20,0,0,0">
				<TextBlock Text="Max Characters:" />
				<Slider Name="MaxCharsSlider" Value="{Binding MaxChars}" Minimum="1000" Maximum="100000" Width="100" IsEnabled="{Binding IsByChars}" />
				<TextBlock Text="{Binding MaxChars, StringFormat={}{0:N0}}" />
			</StackPanel>
			<StackPanel Orientation="Vertical" Margin="20,0,0,0">
				<TextBlock Text="Number of Parts:" />
				<TextBox Name="PartCountTextBox" Text="{Binding PartCount, StringFormat={}{0}}" Width="50" IsEnabled="{Binding IsByParts}" />
			</StackPanel>
		</StackPanel>

		<!-- Start Split Button -->
		<Button Grid.Row="4" Name="StartSplitButton" Content="Start Split File" Width="150" Height="35" Command="{Binding StartSplitCommand}" HorizontalAlignment="Right" />

		<!-- Status Label -->
		<TextBlock Grid.Row="5" Name="StatusTextBlock" Text="{Binding StatusMessage}" Foreground="Gray" HorizontalAlignment="Center" />
		<TextBlock Grid.Row="6" Name="PartsCountTextBlock" Text="{Binding PartsCountMessage}" Foreground="Blue" HorizontalAlignment="Center" />
	</Grid>
</UserControl>